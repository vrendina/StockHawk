<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/secondary_light_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BaseTextStyle.Error" />

    <style name="BaseTextStyle.Change">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextStyle.StockSymbol">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseTextStyle.BidPrice" />

    <style name="BaseTextStyle.CompanyName">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseTextStyle.PriceDetail">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextStyle.LastUpdate" parent="BaseTextStyle.PriceDetail" />

</resources>
